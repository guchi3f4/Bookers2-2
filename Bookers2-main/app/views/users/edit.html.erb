<div class ="container">
  <div class="row">
    <div class="mx-auto col-5 px-0">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3 class="text-danger"><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <label>Image</label>
        <%= f.attachment_field :profile_image, class:"form-control-file" %>
      </div>
      <div class="form-group">
        <label>Introduction</label>
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>