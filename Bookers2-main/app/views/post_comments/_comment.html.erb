<% book.post_comments.each do |post_comment| %>
  <div>
    <%= link_to user_path(post_comment.user) do %>
      <%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
    <% end %>
    <span class="align-bottom"><%= post_comment.user.name %></span>
    <% if post_comment.user == current_user %>
      <%= link_to "Destroy", book_post_comment_path(post_comment.book_id, post_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm align-bottom" %>
    <% end %>
  </div>
  <div>
    <%= post_comment.comment%>
ã€€</div>
<% end %>

