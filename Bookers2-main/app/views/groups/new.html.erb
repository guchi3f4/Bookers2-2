<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Create Group</h1>

      <%= render "post_comments/error", obj:@group %>

      <%= form_with model: @group, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "グループ名" %><br>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "紹介文" %><br>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "グループ画像"%>
          <%= f.attachment_field :image, class:"form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Group", class:"btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
